@model Album2.ViewModels.LoginModel
@{
    ViewData["Title"] = "Login";
}

<form class="col-md-5" asp-action="Login" asp-controller="Account" asp-anti-forgery="false">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Username">Введите имя пользователя</label>
            <input class="form-control" type="text" asp-for="Username" required />
            <span asp-validation-for="Username" />
        </div>
        
        <div class="form-group">
            <label asp-for="Password">Введите пароль</label>
            <input class="form-control" type="password" asp-for="Password" required />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input class="btn btn-primary"type="submit" value="Вход"/>
        </div>
    </div>
</form>
