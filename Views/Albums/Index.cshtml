@model List<Album> 
@{
    ViewData["Title"] = "Albums";
}

<div class="text-center pt-5">
    <a class="btn btn-primary" href="/Albums/Create">Создать новый альбом</a>
    <h1 class="display-4">Ваши альбомы:   </h1>
    @if (Model.Count() == 0)
    {
        <div>
            <h4>У вас пока нет альбомов!</h4>
        </div>
    }
    @foreach (var album in Model)
    {
        <div>
            <h4>
                <a asp-controller="Albums" asp-action="Album"
                   asp-route-id="@album.Id">@album.Name (@album.Num фото)</a>
            </h4>
            
        </div>
    }

</div>
